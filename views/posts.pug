doctype html
html(lang="ar")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="description" content=`${body !== null ? body.slice(0,50): 'فيديوهات إسلامية'}`)
        meta(name="keywords" content= `${body !== null ? body.replace(/\s+/g, ', ') : 'موقع التقوى, فيديوهات إسلامية,فيديو, فيديو إسلامي,فيديوهات قرآن,صور إسلامية,تصاميم إسلامية'}`)
        title=body !== null ? body.slice(0,50) : 'موقع التقوى'
        link(rel="stylesheet" href="/Css/style.css" type="text/css")
        link(rel="shortcut icon" href="../logo.png" type="image/x-icon")
    body 
        #header_top
            a.header_url(href=localhost) الرئيسية
            a.header_url(href=localhost+'/video') الفيديوهات
            a.header_url(href=localhost+'/image') الصور
            a.header_url(href=localhost+'/quran') القرآن الكريم
            a.header_url(href=localhost+'/app') تطبيق التقوى
        #header
            a(href=localhost) 
                img(src="../logo.png" id="logo")
            a(href="https://t.me/tqw24h" target="_blank") 
                img(src="../telegram.png" id="telegram")
        #posts_home
            a(href=localhost) 
                img(src="../return-button.png" id="return_icon")
            h1#title=body !== null ? body : 'موقع التقوى'
            ul#data 
                li المرسل: 
                    a(href=`https://t.me/${username || name}` id= "username")=username || name
                li التاريخ: 
                    span#time=time
            #posts_video_image
                if type === "video"
                    video(src='.' + file id="video_image" poster controls preload="metadata") 
                else if type === "image"
                    img(src='.' + file id="video_image")
        #Statistics
            #Statistics_top إحصائيات 
            ul#Statistics_text
                li عدد المشاركات: 
                    span#Statistics_psts= GetPosts.length
                li عدد الأعضاء: 
                    span#Statistics_psts= Users_length
                li أحدث عضو: 
                    span#Statistics_psts= lastUsers
        p#bottom موقع التقوى | www.altaqwaa.org 
